<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <title>Task</title>
    </head>
    <body style="background-color: rgb(237, 231, 223);">
        <%- include('partials/nav'); -%>


       
        
        <div class="card col-lg-8 mx-auto mt-5">
            <div class="card-body">
                <div>
                    <b>Search Friends</b>
                    <div class="float-right">
                        <form action="/user/friends">
                            <input type="text" placeholder="Search.."  value="<%= search%>" name="search"/>
                            <button type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered mt-4"  style="overflow-x:auto;">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i<users.length; i++) {  %>
                            <tr>
                                <th scope="row"><%= users[i].id %></th>
                                <td><%= users[i].name %></td>
                                <td><%= users[i].email %></td>
                                <td><%= users[i].phone %></td>
                                <td> 
                                    <a href="#addFriendModal<%= users[i].id %>" class="btn btn-sm bg-success text-light" data-toggle="modal"><i class="bi bi-person-plus-fill"></i> Add Friend</a>
                                </td>
                            </tr>
                            <% }  %>
                        </tbody>
                    </table> 
                </div>
                <% 
                    for(var i=0; i<users.length; i++) 
                    {
                %>
                <div id="addFriendModal<%= users[i].id %>" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="/user/friendsList" method="post">
                                <div class="modal-header">						
                                    <h4 class="modal-title">Add Friend</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                </div>
                                <div class="modal-body">					
                                    <p>Are you sure you want to add <%= users[i].name %> as friend?</p>
                                </div>
                                <div class="modal-footer">
                                    <input type="hidden" name="friendId" value="<%= users[i].id %>"/>
                                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                    <input type="submit" class="btn btn-success" value="Add">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            <% 
                } 
            %> 
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            
    </body>
</html>